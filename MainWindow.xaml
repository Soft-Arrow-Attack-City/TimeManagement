<Window x:Class="TimeManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
        xmlns:local="clr-namespace:TimeManagement"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:TimeManagement.Views"
        Title="MainWindow"
        Width="800"
        Height="600"
        Style="{StaticResource MaterialDesignWindow}"
        mc:Ignorable="d">
    <!--  SizeToContent="WidthAndHeight">  -->
    <materialDesign:DialogHost DialogTheme="Inherit"
                               Identifier="RootDialog"
                               SnackbarMessageQueue="{Binding ElementName=MainSnackbar, Path=MessageQueue}">
        <materialDesign:DrawerHost IsLeftDrawerOpen="{Binding ElementName=MenuToggleButton, Path=IsChecked}">
            <materialDesign:DrawerHost.LeftDrawerContent>
                <views:LeftDrawerContent />
            </materialDesign:DrawerHost.LeftDrawerContent>

            <DockPanel>
                <materialDesign:ColorZone Padding="16"
                                          materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                          DockPanel.Dock="Top"
                                          Mode="PrimaryDark">
                    <DockPanel>
                        <ToggleButton x:Name="MenuToggleButton"
                                      AutomationProperties.Name="HamburgerToggleButton"
                                      IsChecked="False"
                                      Style="{StaticResource MaterialDesignHamburgerToggleButton}" />

                        <views:PopupBox DockPanel.Dock="Right" />
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   AutomationProperties.Name="Material Design In XAML Toolkit"
                                   FontSize="22"
                                   Text="时间管理 Time Management" />

                        <!--<materialDesign:PackIcon Kind="Castle" />-->
                    </DockPanel>
                </materialDesign:ColorZone>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="5*" />
                        </Grid.ColumnDefinitions>

                        <Grid Margin="0,40,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <materialDesign:Card Height="80"
                                                     Margin="5,5,2,2"
                                                     Padding="0"
                                                     Background="{DynamicResource MaterialDesignDarkBackground}"
                                                     Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}">
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Style="{StaticResource MaterialDesignBody2TextBlock}">
                                        Test_Left
                                    </TextBlock>
                                </materialDesign:Card>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <materialDesign:Card Height="80"
                                                     Margin="2,5,2,2"
                                                     Padding="0"
                                                     Background="{DynamicResource MaterialDesignLightBackground}"
                                                     Foreground="{DynamicResource PrimaryHueLightForegroundBrush}">
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Style="{StaticResource MaterialDesignBody2TextBlock}">
                                        Test_Right
                                    </TextBlock>
                                </materialDesign:Card>
                            </StackPanel>
                        </Grid>

                        <dragablz:TabablzControl Grid.Column="1"
                                                 Margin="0,-1,0,1"
                                                 BorderThickness="0"
                                                 FixedHeaderCount="1">
                            <TabItem Margin="16" Header="主页">
                                <StackPanel>
                                    <materialDesign:ColorZone Padding="16"
                                                              materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                                              Mode="Standard">
                                        <TextBlock Margin="16" HorizontalAlignment="Center">Test</TextBlock>
                                    </materialDesign:ColorZone>
                                </StackPanel>
                            </TabItem>
                            <TabItem Margin="16" Header="屏幕时间">
                                <TextBlock Margin="16"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Text="TAB 2" />
                            </TabItem>
                            <TabItem Margin="16" Header="日程管理">
                                <TextBlock Margin="16"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Text="TAB 3" />
                            </TabItem>
                            <TabItem Margin="16" Header="虚拟种树">
                                <TextBlock Margin="16"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Text="TAB 4" />
                            </TabItem>
                        </dragablz:TabablzControl>
                    </Grid>

                    <materialDesign:Snackbar x:Name="MainSnackbar"
                                             Grid.Row="1"
                                             MessageQueue="{materialDesign:MessageQueue}" />

                </Grid>
            </DockPanel>
        </materialDesign:DrawerHost>
    </materialDesign:DialogHost>
</Window>