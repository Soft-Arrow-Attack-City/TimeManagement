<Window x:Class="TimeManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
        xmlns:local="clr-namespace:TimeManagement"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:TimeManagement.Views"
        Title="MainWindow"
        Width="800"
        Height="600"
        Style="{StaticResource MaterialDesignWindow}"
        mc:Ignorable="d">
    <!--  SizeToContent="WidthAndHeight">  -->
    <materialDesign:DialogHost DialogTheme="Inherit"
                               Identifier="RootDialog"
                               SnackbarMessageQueue="{Binding ElementName=MainSnackbar, Path=MessageQueue}">
        <materialDesign:DrawerHost IsLeftDrawerOpen="{Binding ElementName=MenuToggleButton, Path=IsChecked}">
            <materialDesign:DrawerHost.LeftDrawerContent>
                <DockPanel MinWidth="220">
                    <ToggleButton Margin="16"
                                  HorizontalAlignment="Right"
                                  DockPanel.Dock="Top"
                                  IsChecked="{Binding ElementName=MenuToggleButton, Path=IsChecked, Mode=TwoWay}"
                                  Style="{StaticResource MaterialDesignHamburgerToggleButton}" />
                    <TextBlock HorizontalAlignment="Center">
                        Drawer<LineBreak />
                        这里可以放点什么？</TextBlock>
                </DockPanel>
            </materialDesign:DrawerHost.LeftDrawerContent>

            <DockPanel>
                <materialDesign:ColorZone Padding="16"
                                          materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                          DockPanel.Dock="Top"
                                          Mode="PrimaryDark">
                    <DockPanel>
                        <ToggleButton x:Name="MenuToggleButton"
                                      AutomationProperties.Name="HamburgerToggleButton"
                                      IsChecked="False"
                                      Style="{StaticResource MaterialDesignHamburgerToggleButton}" />

                        <views:PopupBox DockPanel.Dock="Right" />
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   AutomationProperties.Name="Material Design In XAML Toolkit"
                                   FontSize="22"
                                   Text="时间管理 Time Management" />

                        <!--<materialDesign:PackIcon Kind="Castle" />-->
                    </DockPanel>
                </materialDesign:ColorZone>

                <Grid>


                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="5*" />
                        </Grid.ColumnDefinitions>



                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50" />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0" Margin="12,5,12,2">日程计划</Button>
                                <Button Grid.Column="1" Margin="12,5,12,2">屏幕使用</Button>

                            </Grid>


                            <Grid x:Name="TimelineGrid" Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>


                                <Grid x:Name="planGrid" Grid.Column="0">
                                    <!--  此部分内容由C#代码动态生成。  -->
                                </Grid>



                                <Grid x:Name="actualGrid" Grid.Column="1">
                                    <!--  此部分内容由C#代码动态生成。  -->
                                </Grid>


                            </Grid>
                        </Grid>








                        <dragablz:TabablzControl x:Name="MainZoneTabablz"
                                                 Grid.Column="1"
                                                 Margin="0,-1,0,1"
                                                 BorderThickness="0"
                                                 FixedHeaderCount="1" SelectionChanged="MainZoneTabablz_SelectionChanged">
                            <TabItem Margin="16" Header="主页">
                                <materialDesign:ColorZone Grid.Column="0" Style="{StaticResource MaterialDesignTabColorZone}">
                                    <TextBlock Margin="16"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Text="TAB 1" />
                                </materialDesign:ColorZone>
                            </TabItem>

                            <TabItem Margin="16" Header="屏幕时间">
                                <materialDesign:ColorZone Style="{StaticResource MaterialDesignTabColorZone}">
                                    <TextBlock Margin="16"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Text="TAB 2" />
                                </materialDesign:ColorZone>
                            </TabItem>

                            <TabItem Margin="16" Header="日程管理">
                                <materialDesign:ColorZone Style="{StaticResource MaterialDesignTabColorZone}">
                                    <TextBlock Margin="16"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Text="TAB 3" />
                                </materialDesign:ColorZone>
                            </TabItem>

                            <TabItem Margin="16" Header="虚拟种树">
                                <materialDesign:ColorZone Style="{StaticResource MaterialDesignTabColorZone}"
                                                          VerticalAlignment="Stretch">
                                    <!--    <materialDesign:PackIcon Kind="Account" HorizontalAlignment="Center" VerticalAlignment="Center"/>-->
                                    <materialDesign:Card  Width="350">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition        Height="150" />
                                                <RowDefinition        Height="auto" />
                                                <RowDefinition        Height="auto" />
                                                <RowDefinition        Height="auto" />
                                                <RowDefinition        Height="auto" />
                                                <RowDefinition        Height="auto" />
                                                <RowDefinition        Height="auto" />
                                                <RowDefinition        Height="auto" />
 
                                            </Grid.RowDefinitions>
                                            <Image    Grid.Row="0"   Source="Resources/Pic/tree.jpg"      
                                                      Height="100"     
                                                      Width="100"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      />

                                            <StackPanel      Grid.Row="1"
                                                              Margin="0,0,0,0"
                                                            >
                                                <DockPanel>
                                                <TextBlock        
                                                    DockPanel.Dock="Left" 
                                                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"     
                                                    VerticalAlignment="Center"  
                                                    Margin="10,0,0,0">
                                                        任务名称
                                                    </TextBlock>
                                                    
                                                    <TextBox 
                                                        Width="130"
                                                        DockPanel.Dock="Right" 
                                                        Text="键入新任务名称" 
                                                        TextAlignment="Center" 
                                                        HorizontalAlignment="Right"
                                                        Margin=" 0,0,30,0">
                                                </TextBox>
                                               
                                                    </DockPanel>
                                            </StackPanel>
                                            <StackPanel      Grid.Row="2"
                                                              Margin="0,0"
                                                            >

                                                   <!-- ok-->
                                                <DockPanel>

                                                    <TextBlock
                                                    DockPanel.Dock="Left" 
                                                    Text="设置时间（min）" 
                                                        Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                                        VerticalAlignment="Center"
                                                        Margin="10,0"
                                                        />
                                                    <Slider
                                                    DockPanel.Dock="Right"
                                                    Minimum="0"
                                                    Maximum="120"
                                                    Style="{StaticResource MaterialDesignDiscreteSlider}"
                                                    ToolTip="MaterialDesignDiscreteSlider"
                                                    Value="50"
                                                    Width="160"
                                                    VerticalAlignment="Top"
                                                    />
                                                </DockPanel>         
                                                <!-- ok-->
                                        
                                            </StackPanel>
                                            <StackPanel      Grid.Row="3"
                                                              Margin="0,0"
                                                            >
                                                <DockPanel>
                                                <TextBlock 
                                                    DockPanel.Dock="Left"
                                                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"        VerticalAlignment="Center"      Margin="10,0">
                                                    工作性质
                                                    </TextBlock>
                                                    <ComboBox
                                                          DockPanel.Dock ="Right"
                                                          HorizontalAlignment="Right"
                                                          Margin="0,0,30,0 "
                                                          materialDesign:HintAssist.Hint="工作性质"
                                                          materialDesign:HintAssist.HintOpacity=".26"
                                                          IsEditable="True"

                                                    >
                                                        <ComboBoxItem>
                                                            学习
                                                        </ComboBoxItem>
                                                        <ComboBoxItem>
                                                            休息
                                                        </ComboBoxItem>
                                                        <ComboBoxItem>
                                                            工作
                                                        </ComboBoxItem>
                                                        <ComboBoxItem>
                                                            运动
                                                        </ComboBoxItem>

                                                    </ComboBox>
                                                
                                                </DockPanel>
                                            </StackPanel>

                                            <StackPanel
                                                          Orientation="Horizontal"
                                                        
                                                Grid.Row="4"
                                                 Margin="0,10"
                                                            >
                                                
                                                    <TextBlock 
                                                    
                                                        Style="{StaticResource MaterialDesignSubtitle1TextBlock}" 
                                                        Margin=" 10,0"
                                                        VerticalAlignment="Center"
                                                        Text="优先级"
                                                                />
                                                    <materialDesign:RatingBar
                                                       
                                                    Value="3"
                                                    x:Name="BasicRatingBar"
                                                    HorizontalAlignment="Right"
                                                        Margin="140,0,0,0"
                                                  />
                                              


                                            </StackPanel>


                                            

                                            <StackPanel
                                                    Orientation="Horizontal"
                                                    materialDesign:RippleAssist.IsCentered="True"
                                                Grid.Row="5"
                                                Margin="0,10"
                                                             >

                                                <TextBlock
                                                        
                                                        Style="{StaticResource MaterialDesignSubtitle1TextBlock}" 
                                                        Margin=" 10,0"
                                                            Text="黑名单模式" 
                                                          VerticalAlignment="Center"
                                                            />
                                                <ToggleButton
                                                                  Style="{StaticResource MaterialDesignSwitchAccentToggleButton}"
                                                                  VerticalAlignment="Bottom"
                                                                  Margin="180,0"   />



                                            </StackPanel>
                                            <StackPanel  Grid.Row="6">

                                                <Button
                                                            Style="{StaticResource MaterialDesignRaisedLightButton}"
                                                            Width="100"
                                                            ToolTip="Resource name: MaterialDesignRaisedLightButton"
                                                    HorizontalAlignment="Center"
                                                    Margin="40,20"
                                                          VerticalAlignment="Center">
                                                开始
                                                </Button>
                                            </StackPanel>



                                            <StackPanel
                                                Grid.Row="6"
                                                 Margin="0,0"
                                                      VerticalAlignment="Center">
                                                <Button
                                                    Style="{StaticResource MaterialDesignFlatButton}"
                                                    HorizontalAlignment="Left"
                                                    Margin="8 0 8 8">                                   
                                                    黑名单设置
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </materialDesign:Card>
                                </materialDesign:ColorZone>


                            </TabItem>
                        </dragablz:TabablzControl>
                    </Grid>

                    <materialDesign:Snackbar x:Name="MainSnackbar"
                                             Grid.Row="1"
                                             MessageQueue="{materialDesign:MessageQueue}" />

                </Grid>
            </DockPanel>
        </materialDesign:DrawerHost>
    </materialDesign:DialogHost>
</Window>