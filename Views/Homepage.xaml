<UserControl x:Class="TimeManagement.Views.Homepage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TimeManagement.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <Calendar x:Name="HomepageCalendar" xml:lang="zh-CN" />
        <materialDesign:Clock x:Name="HomepageClock"
                              DisplayAutomation="CycleWithSeconds"
                              Is24Hours="True" />
    </StackPanel>
</UserControl>
